<?xml version="1.0" encoding="utf-8"?>
<extension version="3.1" type="plugin" group="system" method="upgrade">
	<name>PLG_EMMA_FOR_JOOMLA</name>
	<author>Zadra Design</author>
	<creationDate>May 2014</creationDate>
	<copyright>Copyright (C) 2014 Zadra Design. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later.</license>
	<authorEmail>zachary@zadradesign.com</authorEmail>
	<authorUrl>https://zadradesign.com</authorUrl>
	<version>1.0.0</version>
	<description>PLG_EMMA_FOR_JOOMLA_DESCRIPTION</description>

	<files>
		<filename>Emma.php</filename>
		<filename>EmmaExceptions.php</filename>
		<filename>index.html</filename>
		<filename plugin="emma_for_joomla">emma_for_joomla.php</filename>
	</files>

	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_system_emma_for_joomla.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_system_emma_for_joomla.sys.ini</language>
	</languages>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					class="text"
					description="PLG_EMMA_FOR_JOOMLA_FIELD_ACCOUNT_ID_DESC"
					label="PLG_EMMA_FOR_JOOMLA_FIELD_ACCOUNT_ID_LBL"
					name="account_id"
					type="text" />
				<field
					class="text"
					description="PLG_EMMA_FOR_JOOMLA_FIELD_PUB_API_KEY_DESC"
					label="PLG_EMMA_FOR_JOOMLA_FIELD_PUB_API_KEY_LBL"
					name="pub_api_key"
					type="text" />
				<field
					class="text"
					description="PLG_EMMA_FOR_JOOMLA_FIELD_PRI_API_KEY_DESC"
					label="PLG_EMMA_FOR_JOOMLA_FIELD_PRI_API_KEY_LBL"
					name="pri_api_key"
					type="text" />
				<field
					class="btn-group"
					default="0"
					description="PLG_EMMA_FOR_JOOMLA_FIELD_DEBUG_DESC"
					id="debug"
					label="PLG_EMMA_FOR_JOOMLA_FIELD_DEBUG_LBL"
					name="debug"
					type="radio">
						<option value="0">JNO</option>
						<option value="1">JYES</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>